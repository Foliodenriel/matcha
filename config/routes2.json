{
    "home": {
        "path": ["", "home", "foo", "home/{id}/{name}"],
        "controller": "src/Controller/HomeController::index"
    },

    "login": {
        "path": ["login"],
        "controller": "src/Controller/UserController::login"
    },

    "forgot": {
        "path": ["forgot"],
        "controller": "src/Controller/UserController::forgot"
    },

    "reset": {
        "path": ["reset/{userid}/{resetid}"],
        "controller": "src/Controller/UserController::reset"
    },

    "updateaccount": {
        "path": ["update"],
        "controller": "src/Controller/UserController::updateaccount"
    },

    "validated": {
        "path": ["validated/{validationid}"],
        "controller": "src/Controller/UserController::validated"
    },

    "join": {
        "path": ["join"],
        "controller": "src/Controller/UserController::join"
    }

}
